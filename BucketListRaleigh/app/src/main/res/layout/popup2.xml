<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:background="@drawable/large_sticky_note_1">

        <TextView
            android:id="@+id/buildingDescription"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingTop="60dp"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/black"
            android:text="Building Name"
            android:layout_gravity="center"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:id="@+id/add"
            android:paddingLeft="0dp"
            android:contentDescription="Chipotle"
            android:src="@drawable/add"
            android:rotation="15"
            android:clickable="true"
            android:text="add"
            android:layout_above="@+id/photoButton"
            android:layout_alignRight="@+id/buildingDescription"
            android:layout_alignEnd="@+id/buildingDescription" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/photoButton"
            android:paddingLeft="0dp"
            android:contentDescription="Chipotle"
            android:src="@drawable/photo_icon"
            android:rotation="15"
            android:clickable="true"
            android:text="Photos"
            android:layout_below="@+id/buildingDescription"
            android:layout_alignRight="@+id/buildingDescription"
            android:layout_alignEnd="@+id/buildingDescription" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/videoButton"
            android:contentDescription="Chipotle"
            android:src="@drawable/video_icon_two"
            android:rotation="-25"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/reviewButton"
            android:contentDescription="Chipotle"
            android:paddingBottom="0dp"
            android:src="@drawable/reviews_icon"
            android:rotation="-25"
            android:clickable="true"
            android:layout_alignBottom="@+id/add"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


</LinearLayout>