<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csc591.bucketlistraleigh" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name=".view.AnimationActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_animation"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".view.HomeActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_home"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.FoodActivity"
            android:label="@string/title_activity_food"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".view.DrinkActivity"
            android:label="@string/title_activity_drink"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".view.FunActivity"
            android:label="@string/title_activity_fun"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
